                                                if (File.Exists(@"Documents\Usuario\" + n + "/Rutina.txt"))
                                                {
                                                    Console.WriteLine("Ya posee una rutina actualmente");
                                                    Console.ReadKey();
                                                    Console.Clear();
                                                    goto Menu;
                                                }
                                                else
                                                {
                                                    Console.Clear();
                                                    Console.WriteLine("Proximamente...");
                                                    Console.ReadKey();
                                                    Console.Clear();
                                                    goto Menu; //Momentaneo
                                                }
                                                break;
